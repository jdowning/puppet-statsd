[Unit]
Description=Network daemon for aggregating statistics
Documentation=https://github.com/etsy/statsd/
Wants=network.target

[Service]
Type=simple
EnvironmentFile=<%= @init_sysconfig %>
<%-
   env_string = ""
   @env_append.each { |x| env_string << "#{x} -- " }
-%>
ExecStart=<%= env_string %><%= @nodejs_bin %> $STATSJS $STATSD_CONFIG
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
